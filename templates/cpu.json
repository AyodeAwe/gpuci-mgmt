{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-east-2",
            "source_ami": "ami-07c1207a9d40bc3bd",
            "instance_type": "t2.medium",
            "associate_public_ip_address": true,
            "vpc_id": "vpc-81eb9ae9",
            "subnet_id": "subnet-45f29e2d",
            "ssh_username": "ubuntu",
            "ami_name": "gpuci-cpu-{{isotime | clean_resource_name}}",
            "ami_description": "gpuCI CPU Ubuntu 18.04",
            "tags": {
                "role": "gpuci",
                "type": "cpu",
                "os": "ubuntu18.04"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "bootstrap.sh",
            "execute_command": "sudo env {{ .Vars }} {{ .Path }}"
        },
        {
            "type": "ansible",
            "playbook_file": "playbook_cpu.yml"
        }
    ]
}